```python
class WaterConsumption:
    def __init__(self):
        self.total_consumption = 0

    def get_consumption(self):
        return self.total_consumption

    def update_consumption(self, amount):
        self.total_consumption += amount


class ReportingSystem:
    def __init__(self):
        self.reports = []

    def submit_report(self, report):
        self.reports.append(report)

    def view_reports(self):
        for report in self.reports:
            print(report)


class App:
    def __init__(self):
        self.water_consumption = WaterConsumption()
        self.reporting_system = ReportingSystem()

    def main_menu(self):
        while True:
            print("Welcome to UFMG Smart Campus App!")
            print("1. Water Consumption")
            print("2. Reporting System")
            print("0. Exit")
            choice = input("Select an option: ")
            if choice == "1":
                self.water_consumption_menu()
            elif choice == "2":
                self.reporting_system_menu()
            elif choice == "0":
                break
            else:
                print("Invalid option. Please try again.")

    def water_consumption_menu(self):
        while True:
            print("Water Consumption")
            print("1. Check total consumption")
            print("2. Update consumption")
            print("0. Go back")
            choice = input("Select an option: ")
            if choice == "1":
                print("Total water consumption:", self.water_consumption.get_consumption())
            elif choice == "2":
                amount = int(input("Enter consumption amount: "))
                self.water_consumption.update_consumption(amount)
                print("Water consumption updated successfully!")
            elif choice == "0":
                break
            else:
                print("Invalid option. Please try again.")

    def reporting_system_menu(self):
        while True:
            print("Reporting System")
            print("1. Submit a report")
            print("2. View all reports")
            print("0. Go back")
            choice = input("Select an option: ")
            if choice == "1":
                report = input("Enter your report: ")
                self.reporting_system.submit_report(report)
                print("Report submitted successfully!")
            elif choice == "2":
                self.reporting_system.view_reports()
            elif choice == "0":
                break
            else:
                print("Invalid option. Please try again.")


app = App()
app.main_menu()
```
